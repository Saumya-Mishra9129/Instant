<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileSection"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"        >
        <RelativeLayout

            android:layout_marginTop="20dp"
            android:id="@+id/imguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <ImageView

                android:id="@+id/imageprofile"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_person_black_24dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imguser"
            android:text="user name"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"

            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:text="America"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/address"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="true"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Email"
                    android:paddingBottom="8dp"/>
                <TextView
                    android:id="@+id/emailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey_500"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Age"
                    android:paddingBottom="8dp"/>
                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Your Age"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Mobile Number"
                    android:paddingBottom="8dp"/>
                <EditText
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Your Mobile Number Here (WhatsApp)"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Current Address"
                    android:paddingBottom="8dp"/>
                <EditText
                    android:id="@+id/current_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Your Residential Address"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Profession"
                    android:paddingBottom="8dp"/>
                <EditText
                    android:id="@+id/profession"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Your Current Profession"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:text="Guardian's(Close Friend's) Name"
                    android:paddingBottom="8dp"/>
                <EditText
                    android:id="@+id/guar_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter His | Her Name Here"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:paddingBottom="8dp"
                    android:text="Guardian's(Close Friend's) Mobile Number"/>
                <EditText
                    android:id="@+id/guar_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter His | Her Mobile Number Here"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/heaings"
                    android:textSize="13sp"
                    android:paddingBottom="8dp"
                    android:text="Guardian's(Close Friend's) Email"/>
                <EditText
                    android:id="@+id/guar_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter His | Her Email Here"

                    />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <Button
             android:id="@+id/update_profile"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"

             android:layout_weight="1"
             android:background="@android:color/white"
             android:text="Update"
             android:textColor="@color/heaings" />

         <Button
             android:id="@+id/show_profile"

             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:background="@android:color/white"
             android:text="Show"
             android:textColor="@color/heaings" />
     </LinearLayout>
     </LinearLayout>
    </ScrollView>

</RelativeLayout>